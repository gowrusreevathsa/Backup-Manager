<Window x:Class="Backup_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Backup_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Label Content="File/Folder : " Margin="50, 0, 0, 0"/>
            <Label BorderThickness="2" Width="500" Margin="15, 0"/>
        </StackPanel>

        <Button Width="75" Margin="0, 25, 0, 0" Click="ChooseButton">
            Choose File
        </Button>

        <Button Width="75" Margin="0, 25, 0, 0" Click="BackupButton">
            Backup
        </Button>
    </StackPanel>
</Window>
